<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Papyrus.Desktop.Features.Topics" x:Class="Papyrus.Desktop.Features.Topics.TopicWindow"
        mc:Ignorable="d"
        Title="TopicWindow"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <local:VersionRangesToVmConverter x:Key="VersionRangesToVmConverter" />
    </Window.Resources>
    <Grid>
        <DockPanel LastChildFill="True">
            <local:VersionRangesUserControl DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="Auto" Width="Auto" DataContext="{Binding EditableTopic.VersionRanges,Converter={StaticResource VersionRangesToVmConverter}}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 0, 20, 0">
                <Button Command="{Binding DeleteTopic}" MinWidth="100" Margin="10" DockPanel.Dock="Bottom" MaxHeight="50" MaxWidth="100">Delete</Button>
                <Button Command="{Binding SaveTopic}" MinWidth="100" DockPanel.Dock="Bottom" MaxHeight="50" MaxWidth="100">Save</Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
