<UserControl x:Class="Papyrus.Desktop.Features.Topics.VersionRangeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:topics="clr-namespace:Papyrus.Business.Topics;assembly=Papyrus.Business"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignData VersionRangeVM}">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
        <TabControl HorizontalAlignment="Left"
                            TabStripPlacement = "Top"
		                    MinHeight="300"
		                    Margin="0,0,0,0"
		                    VerticalAlignment="Top"
                            ItemsSource="{Binding VersionRange.Documents}"
		                    MinWidth="300">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Language}"></TextBlock>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate DataType="topics:EditableDocument">
                    <StackPanel Margin="40">
                        <Label Content="Title"/>
                        <TextBox x:Name="TitleTextBox" Text="{Binding Title}"/>
                        <Label Content="Description"/>
                        <TextBox x:Name="DescriptionTextBox" Text="{Binding Description}"/>
                        <Label Content="Content"/>
                        <TextBox Text="{Binding Content}" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" MinLines="5" x:Name="ContentTextBox" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
