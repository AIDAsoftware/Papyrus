<Window x:Class="Papyrus.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:topics="clr-namespace:Papyrus.Desktop.Features.Topics"
        xmlns:desktop="clr-namespace:Papyrus.Desktop"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Height="350" Width="525"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=desktop:DesignModeMainWindowVM, IsDesignTimeCreatable=True}"
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}">

    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel Margin="8" Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Top">
                <Button Click="NewTopic_OnClick">New documents</Button>
                <Label>Products</Label>
                <ComboBox MinWidth="100" 
                        ItemsSource="{Binding Products, Mode=TwoWay}"
                        DisplayMemberPath="ProductName" 
                        SelectedItem="{Binding SelectedProduct}">       
                </ComboBox>
            </StackPanel>
            <topics:TopicsGrid SelectedProduct="{Binding SelectedProduct}" DockPanel.Dock="Bottom" />
        </DockPanel>
    </Grid>
</Window>
