<Window x:Class="Papyrus.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:topics="clr-namespace:Papyrus.Desktop.Features.Topics"
        xmlns:mainMenu="clr-namespace:Papyrus.Desktop.Features.MainMenu"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <DockPanel LastChildFill="True">
            <mainMenu:MainMenuView DockPanel.Dock="Top"/>
            <topics:TopicsGrid DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</Window>
