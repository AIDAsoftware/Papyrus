    <script src="@Url.Content("~/Scripts/DocumentService.js")"></script>
    <script src="@Url.Content("~/Scripts/CreateViewOperations.js")"></script>
    <script src="@Url.Content("~/Scripts/DetailViewOperations.js")"></script>
    <script src="@Url.Content("~/Scripts/AllDocumentsViewOperations.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

</body>

</html>
