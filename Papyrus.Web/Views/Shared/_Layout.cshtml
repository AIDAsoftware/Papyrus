                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Papyrus</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Create", "Documents")">Create</a>
                    </li>
                    <li>
                        <a href="@Url.Action("AllDocuments", "Documents")">Documents</a>
                    </li>
                </ul>
            </div>
