        </div>
        <!-- /.container -->
    </nav>

    <!-- Full Width Image Header -->
    <!-- Page Content -->
    <div class="container">

    <!-- Dinamic web content selector -->
    @RenderBody()

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Papyrus Website @DateTime.Now.Year</p>
            </div>
        </div>
    </footer>

</div>
    <!-- /.container -->
